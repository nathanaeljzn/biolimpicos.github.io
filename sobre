    <script>
        // Mobile Menu Toggle com animação
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const navMenu = document.querySelector('nav ul');
        const mobileOverlay = document.querySelector('.mobile-overlay');
        const navLinks = document.querySelectorAll('nav ul li a');
        
        mobileMenuBtn.addEventListener('click', () => {
            navMenu.classList.toggle('show');
            mobileMenuBtn.classList.toggle('active');
            mobileOverlay.classList.toggle('active');
        });
        
        // Fechar o menu ao clicar no overlay
        mobileOverlay.addEventListener('click', () => {
            navMenu.classList.remove('show');
            mobileMenuBtn.classList.remove('active');
            mobileOverlay.classList.remove('active');
        });
        
        // Fechar o menu ao clicar em um link
        navLinks.forEach(link => {
            link.addEventListener('click', () => {
                navMenu.classList.remove('show');
                mobileMenuBtn.classList.remove('active');
                mobileOverlay.classList.remove('active');
            });
        });
        
        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    window.scrollTo({
                        top: target.offsetTop - 100,
                        behavior: 'smooth'
                    });
                    
                    // Close mobile menu if open
                    navMenu.classList.remove('show');
                    mobileMenuBtn.classList.remove('active');
                    mobileOverlay.classList.remove('active');
                }
            });
        });
        
        // Animação ao rolar
        const observerOptions = {
            root: null,
            rootMargin: '0px',
            threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    // Adiciona a classe para animar
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                    
                    // Para as conquistas
                    if(entry.target.classList.contains('achievement-card')) {
                        entry.target.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                    }
                    // Para os objetivos
                    else if(entry.target.classList.contains('objective-card')) {
                        entry.target.style.transition = 'all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
                    }
                }
            });
        }, observerOptions);

        // Observar elementos com a classe 'achievement-card' e 'objective-card'
        document.querySelectorAll('.achievement-card, .objective-card').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(20px)';
            observer.observe(el);
        });
    </script>
